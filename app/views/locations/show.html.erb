<%= javascript_include_tag "./location_map/location_map" %>

<div id="show_locations_name" class="eight columns">
  <%= @location.name %>
</div>

  <div id="show_location_labels" class="four columns">
    <p>Address:</p>
    <p>Suite/Floor:</p>
    <p>City:</p>
    <p>State:</p>
    <p>Zip:</p>
    <p>Description:</p>
  </div>
  <div id="show_locations_data" class="four columns">
    <p><%= @location.address %></p>
    <p><%=@location.address_detail%></p>
    <p><%=@location.city%></p>
    <p><%=@location.state%></p>
    <p><%=@location.zipcode%></p>
    <p><%=@location.description%></p>
  </div>
</div>


<div class="gmap-container eight columns">
  <div id="gmap-canvas"></div>
</div>
